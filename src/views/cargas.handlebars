<h1>Cargas Familiares</h1>
<br>
<table id="productsTable" class="table table-striped">
    <tr>
        <td><strong>Rut empleado</strong></td>
        <td><strong>Nombre carga</strong></td>
        <td><strong>Parentesco</strong></td>
        <td><strong>Genero</strong></td>
        <td><strong>Rut carga</strong></td>
    </tr>
    {{#each data.docs}}
    <tr>
        <td>{{this.rut_empleado}}</td>
        <td>{{this.nombre_carga}}</td>
        <td>{{this.parentesco}}</td>
        <td>{{this.genero}}</td>
        <td>{{this.rut_carga}}</td>
    </tr>
    {{/each}}
</table>
<nav aria-label="Page navigation example">
    <ul class="pagination">
        <li class="page-item {{#if data.hasPrevPage}}{{else}}disabled{{/if}}">
            <a class="page-link" href="/cargas?page={{data.prevPage}}">Anterior</a>
        </li>
        {{#each front_pagination}}
        <li class="page-item {{#if this.active}}active{{/if}}">
            <a class="page-link" href="/cargas?page={{this.page}}">{{this.page}}</a>
        </li>
        {{/each}}
        <li class="page-item {{#if data.hasNextPage}}{{else}}disabled{{/if}}">
            <a class="page-link" href="/cargas?page={{data.nextPage}}">Siguiente</a>
